<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.category.capitalize %></p>
<p><%= @restaurant.address%></p>
<p><%= @restaurant.phone_number%></p>

<%= link_to "Back to restaurant list", restaurants_path, class: "btn btn-primary d-inline" %>
<%# <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary d-inline" %>

<h3 class="mt-3">Reviews</h3>
<ul class="list-group mt-3">
  <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <%= review.content %>
        <span class="badge badge-primary badge-pill"><%= "⭐" * review.rating %></span>
      </li>
  <% end %>
</ul>

<h1 class="mt-3">What do you thing about <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: %w[0 1 2 3 4 5] %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
